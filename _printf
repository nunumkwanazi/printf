#include "holberton.h"

/**
 * _printf - Prints a formatted string to the standard output.
 * @format: A pointer to a string of characters to be printed.
 *
 * Return: The total number of characters printed (excluding the null byte
 *         used to end output to strings).
 */
int _printf(const char *format, ...)
{
	va_list args;
	int (*handler)(va_list);
	int count = 0;

	va_start(args, format);

	while (*format != '\0')
	{
		if (*format == '%')
		{
			format++;

			if (*format == '\0')
				return (-1);

			handler = get_handler(*format);

			if (handler == NULL)
				count += print_unknown_spec(*format);
			else
				count += handler(args);
		}
		else
		{
			_putchar(*format);
			count++;
		}

		format++;
	}

	va_end(args);

	return (count);
}

